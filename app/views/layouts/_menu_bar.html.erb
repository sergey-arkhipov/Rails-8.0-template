<div class="navbar bg-base-300">
  <div class="flex">
    <a class="btn btn-ghost text-xl">Ale2Da</a>
  </div>
  <div class="navbar-center">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
        <%= image_tag "burger.svg", class: "h-5 w-5" %>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
        <%= render "layouts/menu_items" %>
      </ul>
    </div>
  </div>
  <div class="navbar-start hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      <%= render "layouts/menu_items" %>
    </ul>
  </div>
  <div class="flex gap-2 navbar-end">
    <div class="form-control">
      <input type="text" autocomplete=off placeholder="Search" class="input input-bordered w-24 md:w-auto">
    </div>
    <div class="dropdown dropdown-end ">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar" id="user_avatar">
        <div class="w-10 rounded-full">
          <%= image_tag "avatar-default.svg" %>
        </div>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
        <li>
          <%= link_to "#", class: "justify-between" do %>
            Profile
            <span class="badge">New</span>
          <% end %>
        </li>
        <li><%= link_to "Settings", "#" %></li>
        <li><%= link_to "Logout", "#" %></li>
      </ul>
    </div>
  </div>
</div>
